<div class="header">
    <img src="/assets/img/burger.png" alt="Cartoon Burger">
    <h1>Eat-Da-Burger</h1>

    <form class="create-form">
        <div class="form-group">
            <textarea id="burg" cols="20" rows="2"></textarea>
            <button type="submit">Submit</button>
            <p>Enter a burger you want to eat! Click the submit button.</p>
        </div>
    </form>

</div>

<div class="container">
    <div class="not-devoured">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                <div class="burgeritem">{{this.id}}. {{this.burger_name}}</div>
                <button class="devour-burger" data-id="{{this.id}}">Devour!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="devoured">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>{{this.id}}. {{this.burger_name}} - Devoured </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>